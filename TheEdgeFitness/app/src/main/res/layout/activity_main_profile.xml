<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout"
                                                   android:background="@android:color/black">

    <TextView
            android:text="@string/PROFILE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageProfile" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="50sp"
            android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageFirstName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pageProfile" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="25sp" android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageLastName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pageFirstName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="25sp" android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageAge" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pageLastName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="25sp" android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageGender" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pageAge" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="25sp" android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageEmail" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/pageGender" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="25sp" android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pagePassword" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pageEmail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="25sp" android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageCalories" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/pagePassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="25sp" android:textColor="@android:color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageWater" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pageCalories" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="25sp" android:textColor="@android:color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>